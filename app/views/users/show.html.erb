<p>
  <strong>Id:</strong>
  <%= @user.id %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Password:</strong>
  <%= @user.pass %>
</p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Birthday:</strong>
  <%= @user.birthday %>
</p>

<p>
  <strong>Address:</strong>
  <%= @user.address %>
</p>

<p>
  <strong>Postal Code:</strong>
  <%= @user.postal_code %>
</p>

<p>
  <strong>Posts:</strong>
</p>

<% if @user.posts.any? %>
 <table>
  	<tr>
  		<th>Message</th>
  		<th>Post Date</th>
  	</tr>

  	<% @user.posts.each do |post| %>
  	<tr>
  		<td><%= post.msg %></td>
  		<td><%= post.created_at %></td>
  	</tr>
  	<% end %>
  </table>
<% end %>


<%= link_to 'Edit', edit_user_path(@user) %> |
